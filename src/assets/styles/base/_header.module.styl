@import './_variables.module.styl'

.header
  margin-bottom: 1.45rem
  background: $mainBlue

.header__container
  margin: 0 auto
  max-width: 960px
  padding: 1.45rem 1.0875rem

.header__logo
  padding: 20px
  background-color: $mainBackground
  color: $mainBlue
  font-weight: 300
  font-family: $fontFamily
  font-size: 2.5rem
  position: absolute
  top: 0
  left: 50%
  transform: translateX(-50%) scale(1);
  transform-origin: 50% 0;
  text-decoration: none

.header__menu_content
  opacity: 0
  transition: all 0.3s ease-out
  position: relative
  z-index: -10
  text-align: center
  width: 100%
  margin-top: 20px;
  margin-bottom: 0;

.header__menu_content_is_visible
  opacity: 1
  z-index: 1
  transition: all 0.3s ease-out
  padding-top: 50px

.header__linklist
  list-style: none
  margin-bottom: 0

.header__link
  display: inline-block
  margin-right: 1.5rem

.header__link > a
  color: $mainBackground

.header__menuicon
  width: 20px
  height: 19px
  position: absolute
  top: 10px
  right: 10px
  z-index: 10

.header__menuicon::before
  content: ""
  position: absolute
  top: 0
  left: 0
  height: 3px
  width: 20px
  background-color: #fff
  transform-origin: 0 0;
  transition: transform 0.3s ease-out;

.header__menuicon__middle
  position: absolute
  top: 8px
  left: 0
  height: 3px
  width: 20px
  background-color: #fff
  transition: all 0.3s ease-out
  transform-origin: 0 50%

.header__menuicon::after
  content: ""
  position: absolute
  bottom: 0
  left: 0
  height: 3px
  width: 20px
  background-color: #fff
  transform-origin: 0 100%
  transition: transform 0.3s ease-out


.header__menuicon_close_x::before {
  transform: rotate(45deg) scaleX(1.25);
}

.header__menuicon_close_x::after {
  transform: rotate(-45deg) scaleX(1.25) translateY(1px);
}


.header__menuicon__middle_close_x {
  opacity: 0;
  transform: scaleX(0);
}

/* Media queries */
@media (min-width: $atMedium)
  .header__logo
    left: auto
    font-size: 1.7rem
    padding: 10px
    position: unset
    display: inline-block
    transform: translateX(0)

  .header__menuicon
    display: none;

  .header__menu_content
    opacity: 1
    z-index: 1
    padding-top: 0
    margin-top: 0;
    transform: scale(1)

  .header__linklist
    float: right

  .header__linklist > li
    margin-bottom: 0

